using System;

namespace CountNumberInArray
{
    class Program
    {
        static void Main(string[] args)
        {
            int n, k;
            int count = 0;

            // Read input n and k
            Console.WriteLine("Enter the value of n and k (separated by space):");
            string[] input = Console.ReadLine().Split(' ');
            n = int.Parse(input[0]);
            k = int.Parse(input[1]);

            // Read array elements
            Console.WriteLine("Enter the elements of the array (separated by space):");
            input = Console.ReadLine().Split(' ');
            int[] arr = new int[n];
            for (int i = 0; i < n; i++)
            {
                arr[i] = int.Parse(input[i]);
                if (arr[i] == k)
                {
                    count++;
                }
            }

            // Output the result
            Console.WriteLine("The number of times k appears in the array is: " + count);
        }
    }
}
