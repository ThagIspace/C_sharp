using System;
class Program
{
    static void Main(string[] args)
    {
        int h = int.Parse(Console.ReadLine());
        for (int i = 1; i <= h; i++)
        {
            for (int j = i; j < h; j++)
            {
                Console.Write(" ");
            }
            for (int j = 1; j <= (2 * i - 1); j++)
            {
                Console.Write("*");
            }
            Console.Write("\n");
        }
    }
}
